@model MainViewModel
<div class="peliculas-favoritas contenedor">
    <h2 class="Seccion">PELICULAS</h2></br>

    <div class="contenedor-titulo-controles">

        <h3>Favoritos</h3>
        <div class="indicadores"></div>
    </div>

    <div class="contenedor-principal">
        <button role="button" id="flecha-izquierda" class="flecha-izquierda"><i class="fas fa-angle-left"></i></button>

        <div class="contenedor-carousel1">
            <div class="carousel">

                @foreach (var item in Model.popularViewModel.results)
                {
                    string srcImg = "https://image.tmdb.org/t/p/w500" + @item.poster_path;
                    string srcBackImg = "https://image.tmdb.org/t/p/w500" + @item.backdrop_path;
                    string idModal = "#mi_modal" + item.id;
                    string identifierModal = "mi_modal" + item.id;

    <div class="pelicula">
        <a data-toggle="modal" href=@idModal><img src=@srcImg alt=""></a>
    </div>
    <div class="modal fade modal" id=@identifierModal tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Cerrar</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">@item.title</h4>
                </div>
                <div class="modal-body">
                    <div class="row" style="padding:15px">
                        <img class="img-fluid" alt="Responsive image" src=@srcBackImg />
                    </div>
                    <div class="row text-justify" style="padding:15px">
                        @item.overview
                    </div>
                    <div class="row" style="padding:15px">
                        Fecha de lanzamiento: @item.release_date
                    </div>
                    <div class="row" style="padding:15px">
                        Popularidad: @item.popularity
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    }
            </div>
        </div>
        


        <button role="button" id="flecha-derecha" class="flecha-derecha"><i class="fas fa-angle-right"></i></button>
    </div>

</div>

